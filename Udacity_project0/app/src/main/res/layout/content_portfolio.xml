<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="myportfolio.nanodegree.com.udacity_project0.PortfolioActivity"
    tools:showIn="@layout/activity_portfolio">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"

        android:text="My Nano Degree Apps!"
        android:textColor="@android:color/black"
        android:textSize="25dp" />

    <Button
        android:id="@+id/spotify_button"
        style="@style/CustomButtonStyle"
        android:layout_below="@id/textView"
        android:text="Spotify Streamer" />

    <Button
        android:id="@+id/scores_app"
        style="@style/CustomButtonStyle"
        android:layout_below="@id/spotify_button"
        android:text="Scores App" />

    <Button
        android:id="@+id/library_app"
        style="@style/CustomButtonStyle"
        android:layout_below="@id/scores_app"
        android:text="Library App" />

    <Button
        android:id="@+id/build_it_bigger_button"
        style="@style/CustomButtonStyle"
        android:layout_below="@id/library_app"
        android:text="build it bigger" />

    <Button
        android:id="@+id/xyz_reader_app"
        style="@style/CustomButtonStyle"
        android:layout_below="@id/build_it_bigger_button"
        android:text="XYZ Reader" />

    <Button
        android:id="@+id/capstone_project"
        style="@style/CustomButtonStyle"
        android:layout_below="@id/xyz_reader_app"
        android:text="Capstone Project: My Own Project."
        android:background="#FF3030"
        android:textSize="12sp" />

</RelativeLayout>
